# Sample list of customer account IDs
customer_ids = [1045, 1023, 1089, 1001, 1050, 1099, 1010]

# Function for Linear Search
def linear_search(ids, target):
    for id in ids:
        if id == target:
            return True
    return False

# Function for Binary Search
def binary_search(ids, target):
    low = 0
    high = len(ids) - 1

    while low <= high:
        mid = (low + high) // 2
        if ids[mid] == target:
            return True
        elif ids[mid] < target:
            low = mid + 1
        else:
            high = mid - 1
    return False

# Input from user
search_id = int(input("Enter the customer account ID to search: "))

# Linear Search
found_linear = linear_search(customer_ids, search_id)

# Binary Search (on sorted list)
sorted_ids = sorted(customer_ids)
found_binary = binary_search(sorted_ids, search_id)

# Results
print("\nResults:")
print("Linear Search:  Found" if found_linear else "Linear Search:  Not Found")
print("Binary Search: Found" if found_binary else "Binary Search: Not Found")



Output:-
Enter the customer account ID to search: 1099

Results:
Linear Search:  Found
Binary Search: Found

Enter the customer account ID to search: 4040

Results:
Linear Search:  Not Found
Binary Search: Not Found


Enter the customer account ID to search: 1045

Results:
Linear Search:  Found
Binary Search: Found
